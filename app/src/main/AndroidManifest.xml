<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SampleNotesApp">

        <activity
            android:name=".ui.feature.home.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.SampleNotesApp.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.feature.create.AddNoteActivity"
            android:label="@string/add_note" />

        <activity
            android:name=".ui.feature.detail.NoteDetailsActivity"
            android:label="@string/note_details" />
    </application>

</manifest>